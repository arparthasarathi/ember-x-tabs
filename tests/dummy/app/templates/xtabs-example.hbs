<h1>10. Shape</h1>
{{!-- Shape --}}
<section>
  {{tab-example tabStyle="tabs-style-shape"}}
  {{#x-tab  tab-style="tabs-style-shape" as |tab| }}

  {{!-- tab navigation --}}
    {{#x-tab/navigation}}
      {{#x-tab/nav-wrap paneId="home-shape" tab=tab}}
        <svg viewBox="0 0 80 60" preserveAspectRatio="none"><use xlink:href="#tabshape"></use></svg>
        <span>Home</span>
      {{/x-tab/nav-wrap}}
      {{#x-tab/nav-wrap paneId="archive-shape" tab=tab}}
        <svg viewBox="0 0 80 60" preserveAspectRatio="none"><use xlink:href="#tabshape"></use></svg>
        <svg viewBox="0 0 80 60" preserveAspectRatio="none"><use xlink:href="#tabshape"></use></svg>
        <span>Archive</span>
      {{/x-tab/nav-wrap}}
      {{#x-tab/nav-wrap paneId="analytics-shape" tab=tab}}
        <svg viewBox="0 0 80 60" preserveAspectRatio="none"><use xlink:href="#tabshape"></use></svg>
        <svg viewBox="0 0 80 60" preserveAspectRatio="none"><use xlink:href="#tabshape"></use></svg>
        <span>Analytics</span>
      {{/x-tab/nav-wrap}}
      {{#x-tab/nav-wrap paneId="settings-shape" tab=tab}}
        <svg viewBox="0 0 80 60" preserveAspectRatio="none"><use xlink:href="#tabshape"></use></svg>
        <svg viewBox="0 0 80 60" preserveAspectRatio="none"><use xlink:href="#tabshape"></use></svg>
        <span>Settings</span>
      {{/x-tab/nav-wrap}}
      {{#x-tab/nav-wrap paneId="upload-shape" tab=tab}}
        <svg viewBox="0 0 80 60" preserveAspectRatio="none"><use xlink:href="#tabshape"></use></svg>
        <span>Upload</span>
      {{/x-tab/nav-wrap}}
    {{/x-tab/navigation}}

    {{!-- tab content --}}
    <div class="content-wrap">
      {{#tab.pane elementId="home-shape"}}
        <h1>Home</h1>
        <p>This is home content</p>
      {{/tab.pane}}

      {{#tab.pane elementId="archive-shape"}}
        <h1>Archive</h1>
        <p>This is archive content</p>
      {{/tab.pane}}
      {{#tab.pane elementId="analytics-shape"}}
        <h1>Analytics</h1>
        <p>This is analytics content</p>
      {{/tab.pane}}
      {{#tab.pane elementId="settings-shape"}}
        <h1>Settings</h1>
        <p>This is settings content</p>
      {{/tab.pane}}
      {{#tab.pane elementId="upload-shape"}}
        <h1>Upload</h1>
        <p>This is upload content</p>
      {{/tab.pane}}
    </div>

  {{/x-tab}}
</section>


